<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:id="@+id/warp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/design_default_color_primary">
                <TextView
                    android:id="@+id/tv_tiket_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title Tiket"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/cardview_light_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat :"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/edt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="salatiga"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/tv_address"
                    app:layout_constraintTop_toTopOf="@id/tv_address"
                    android:layout_marginStart="5dp"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Harga :"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_address" />
                <TextView
                    android:id="@+id/edt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="salatiga"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/tv_price"
                    app:layout_constraintTop_toTopOf="@id/tv_price"
                    android:layout_marginStart="5dp"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/tv_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Jam Operasi :"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_price" />
                <TextView
                    android:id="@+id/edt_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="salatiga"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/tv_operation"
                    app:layout_constraintTop_toTopOf="@id/tv_operation"
                    android:layout_marginStart="5dp"
                    android:textSize="12dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>